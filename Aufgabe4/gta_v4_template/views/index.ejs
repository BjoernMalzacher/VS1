<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

    <header class="header row">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location">
        <h1 class="header__title">GeoTagApp</h1>
        
        <nav class="header__navigation">
            <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>
    
    <main class="main row">
        <section class="main__tagging tagging col-3">
            <h2>Tagging</h2>

            <!-- ############### VS1Lab 1a Form 1 Start -->
         
            <form id="tag-form" action="/tagging" method="post" onsubmit="return false;">
                <Fieldset class="tagging_field">

                    <legend class="tagging_legend" >Add a new GeoTag</legend>
            
                    
                    <label for="Latitute_value" class="lat" >
                        Latitude:</label>
                    <input type="text" , name="latitude"  id="Latitute_value" value="<%= latitude %>"
                        pattern="^-?([0-8]?[0-9]|90)(\.[0-9]{1,10})$" class="lat_input" readonly = "false"> </input>
                    
                        <label for="Longitute_value" class="long">
                        Longitude:</label><input type="text"  name="longitude" class="long_input" id="Longitute_value"
                        value="<%= longitude %>" pattern="^-?([0-9]{1,2}|1[0-7][0-9]|180)(\.[0-9]{1,10})$"
                        readonly = "false">
                    
                    <label for="name_value" class="name">
                        Name:</label>
                    <input type="text" name="name" id="name_value" class="name_input" placeholder="e.g Central Berlin " pattern="[A-Za-z#]+"
                        size="10" value=""required>
                    
                    <label for="hashtag_value" class="hash">Hashtag:</label>
                    <input type="text" name="hashtag" value="" id="Hash_id" class="hash_input" placeholder="#ber" pattern="#[A-Za-z*]+"
                        size="10"> 
                    <input type="submit" class="submit_input" id="tag_input" value="Add Tag" >
       
                </Fieldset>
            </form>
        
            <!-- ############### VS1Lab 1a Form 1 End -->

        </section>

        <section class="main__discovery discovery col-9">
            <h2 class="discovery__title">Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            
            <form class="discovery__search" id="discoveryFilterForm" action="/discovery" method="post" onsubmit="return false;" >
                <fieldset class="search_field">
                    <legend>Search</legend>
                    <div class="input_container">
                        <label for="search_value" class="search">Search term or keyword:</label> 
                        <input type="text" class="search_input" name="Search" , id="search_value"
                        placeholder="Search">
                        <input type="hidden" class="lathidden" name="lat_hidden" , id="latHidden" value = "<%= latitude %>">
                        <input type="hidden" class="longhidden" name="long_hidden" , id="longHidden" value = "<%= longitude %>">

                        <input type="submit" class="search_submit" , value="Search">
                    </div>
                </fieldset>
            </form>
       
            <!-- ############### VS1Lab 1a Form 2 End -->

            <div class="discovery__wrapper row">
                <div class="discovery__taglist col-3">
                    
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                     </ul>
                </div>

                <div class="discovery__map col-9">
                    <img src="./images/mapview.jpg" alt="a map with locations" id="mapView" data-tags="<%= taglist_json %>" />
                    <span>Result map</span>
                </div>
            </div>
        </section>

    </main>

    <footer class="footer">
        <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>
    <script src=".\javascripts\location-helper.js"></script>
    <script src=".\javascripts\map-manager.js"></script>
    <script src=".\javascripts\geotagging.js"></script>

</body>

</html>